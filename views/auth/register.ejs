<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Fonts -->
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,600" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/stylesheets/register-style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <title>Register</title>
</head>

<body class="bg-dark text-white mainBody ">

<%-include("./partial/navbar") -%>

    <main class="my-form ">


        <div class="cotainer ">

            <div class="row justify-content-center ">
                <div class="col-md-8 ">
                    <div class="card bg-success">
                        <div class="card-header">Register Page</div>
                        <div class="card-body  bg-dark text-white">

                            <form class="" name="my-form" onsubmit="return validform()" action="/auth/register"
                                method="POST">

                                <div class="form-group row d-flex flex-row">

                                    <label for="firstName " class=" col-md-3 col-form-label text-md-right">First
                                        Name</label>

                                    <div class="col-md-4 ">
                                        <input type="text" id="firstName" class="form-control" name="firstName">
                                    </div>

                                    <div class="col-md-5 m-0 " style="height: 38px;">
                                        <div class="alert alert-warning d-none  m-0 " id="firstNameAlert" role="alert"
                                            style="font-size: 10px; color: red;">
                                        </div>
                                    </div>

                                </div>

                                <div class="form-group row">
                                    <label for="lastName" class="col-md-3 col-form-label text-md-right">Last
                                        Name</label>
                                    <div class="col-md-4">
                                        <input type="text" id="lastName" class="form-control" name="lastName">
                                    </div>
                                    <div class="col-md-5 m-0" style="height: 38px;">
                                        <div class="alert alert-warning d-none  m-0 " id="lastNameAlert" role="alert"
                                            style="font-size: 10px; color: red;">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="Email" class="col-md-3 col-form-label text-md-right">E-Mail
                                        Address</label>
                                    <div class="col-md-4">
                                        <input type="text" id="Email" class="form-control" name="Email">
                                    </div>
                                    <div class="col-md-5 m-0" style="height: 38px;">
                                        <div class="alert alert-warning d-none  m-0 " id="EmailAlert" role="alert"
                                            style="font-size: 10px; color: red;">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="phoneNumber" class="col-md-3 col-form-label text-md-right">Phone
                                        Number</label>
                                    <div class="col-md-4">
                                        <input type="text" id="phoneNumber" class="form-control" name="phoneNumber">
                                    </div>
                                    <div class="col-md-5 m-0" style="height: 38px;">
                                        <div class="alert alert-warning d-none  m-0 " id="phoneNumberAlert" role="alert"
                                            style="font-size: 10px; color: red;">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="userName" class="col-md-3 col-form-label text-md-right">Username</label>
                                    <div class="col-md-4">
                                        <input type="text" id="userName" class="form-control" name="userName">
                                    </div>

                                    <div class="col-md-5 m-0" style="height: 38px;">
                                        <div class="alert alert-warning d-none  m-0 " id="userNameAlert" role="alert"
                                            style="font-size: 10px; color: red;">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="password" class="col-md-3 col-form-label text-md-right">Password</label>
                                    <div class="col-md-4">
                                        <input type="password" id="password" class="form-control" name="password">
                                    </div>
                                    <div class="col-md-5 m-0" style="height: 38px;">
                                        <div class="alert alert-warning d-none  m-0 " id="passwordAlert" role="alert"
                                            style="font-size: 10px; color: red;">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <legend class="col-md-3 col-form-label text-md-right">Sex</legend>
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="sex" id="gridRadios1"
                                                value="male" checked>
                                            <label class="form-check-label" for="gridRadios1">
                                                Male
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="sex" id="gridRadios2"
                                                value="female">
                                            <label class="form-check-label" for="gridRadios2">
                                                Female
                                            </label>
                                        </div>
                                        <div class="form-check disabled">
                                            <input class="form-check-input" type="radio" name="gridRadios"
                                                id="gridRadios3" value="option3" disabled>
                                            <label class="form-check-label" for="gridRadios3">
                                                Non-intersex
                                            </label>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-md-6 offset-md-4 ">
                                    <button type="submit" class="btn btn-primary">
                                        Register
                                    </button>
                                </div>


                        </div>
                        </form>

                    </div>


                    <div class="text-info">
                    <%= msg %>
                    </div>

                </div>
            </div>
        </div>
        </div>

    </main>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="/javascripts/register-main.js"></script>

</body>

</html>